pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function log(input)
	printh("> "..tostr(input))
end

function _init()
  x=60
  y=80
  dy=0
  state="grounded"
  headroom=5 -- init headroom (max boost time)

end

function _update()
  if state=="grounded" and btn(4) then
    state="boosting"
    headroom-=1
    dy=-8
    sfx(0)
  elseif state=="boosting" then
    if btn(4) and headroom>0 then
      headroom-=1
    else
      state="falling"
      headroom=5
      dy/=2
    end
  elseif state=="falling" then
    if landed() then
      state="grounded"
      dy=0
    else
      dy+=1
    end
  end
  y=y+dy<80 and y+dy or 80
end

function _draw()
  cls()
  map()
  spr(16,x,y,2,2)
end

function landed()
  return fget(mget((x+8)/8,(y+16)/8),0)
end

