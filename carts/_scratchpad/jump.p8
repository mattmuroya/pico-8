pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function log(input)
	printh("> "..tostr(input))
end

function _init()
  f=0
  x=60
  y=88
  dy=0
  state="grounded"
  headroom=20
end

function _update()
  -- grounded
  if state=="grounded" and btn(4) then
    state="boosting"
    headroom-=1
    dy=-1
  -- boosting
  elseif state=="boosting" then
    if btn(4) and headroom>0 then
      headroom-=1
    else
      state="falling"
      headroom=20
      dy=1
    end
  -- falling
  elseif state=="falling" and landed() then
    if not btn(4) then
      state="grounded"
    end
    dy=0
  end
  y+=dy
end

function _draw()
  cls()
  map()
  spr(f,x,y)
end

function landed()
  return fget(mget((x+4)/8,(y+8)/8),0)
end
