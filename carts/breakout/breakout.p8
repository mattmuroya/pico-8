pico-8 cartridge // http://www.pico-8.com
version 41
__lua__

function log(input)
  printh("> " .. tostr(input))
end

function _init()
  cls()

  paddle = {}
  paddle.w = 24
  paddle.h = 3
  paddle.x = 30
  paddle.y = 120
  paddle.dx = 0

  ball = {}
  ball.r = 2
  ball.x = paddle.x + paddle.w / 2
  ball.y = paddle.y - ball.r - 1
  ball.dx = 1
  ball.dy = -1
end

function _update()
  paddle.dx = 0

  if btn(0) then paddle.dx = -2 end
  if btn(1) then paddle.dx = 2 end

  if ball.x >= 127 - ball.r or ball.x <= ball.r then
    ball.dx = -ball.dx
    sfx(0)
  end

  if ball.y >= 127 - ball.r or ball.y <= ball.r then
    ball.dy = -ball.dy
    sfx(0)
  end

  paddle.x += paddle.dx

  ball.x += ball.dx
  ball.y += ball.dy
end

function _draw()
  cls(3)
  rectfill(paddle.x, paddle.y, paddle.x + paddle.w, paddle.y + paddle.h, 7)
  circfill(ball.x, ball.y, ball.r, 11)
end

